#include<iostream>
#include<algorithm>
#include<math.h>
using namespace std;
void print (string sitkva)
{
	cout<< sitkva;
}
float  calculateArea(float a, float b, float c, float area, float s)
{

	s = (a+b+c)/2;
	area = sqrt(s*(s-a)*(s-b)*(s-c));
	return area;	
}
int main ()
    {
    	float a,b,c;
  	print("ACCES FIRST NUMBER: ");
	cin>>a;
	print("ACCESS SECOND NUMBER: ");
	cin>>b;
	print("ACCESS THIRTH NUMBER: ");
	cin>>c;
	cout<< "lenght of triangle is :";
	cout<<calculateArea << endl;
	}
